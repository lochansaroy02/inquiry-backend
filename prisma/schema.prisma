generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyMember {
  id         String  @id @default(cuid())
  relation   String  @unique
  name       String
  age        Int
  occupation String
  Person     Person? @relation(fields: [personId], references: [id])
  personId   String?
}

model Person {
  id         String         @id @default(cuid())
  name       String
  age        String
  gender     String
  isAcccused Boolean
  dossierNo  String?
  // faceData   Unsupported("")
  members    FamilyMember[]
  Checking   Checking?      @relation(fields: [checkingId], references: [id])
  checkingId String?
}

model Checking {
  id                  String   @id @default(cuid())
  checkingOfficerName String
  policeStation       String
  captured            Person[]
}
