generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for data consistency
enum Gender {
  male
  female
}

model Person {
  id         String  @id @default(cuid())
  name       String
  age        Int
  gender     Gender
  isAcccused Boolean
  dossierNo  String?
  statement  String?

  members    FamilyMember[]
  Checking   Checking?      @relation(fields: [checkingId], references: [id])
  checkingId String?
  Address    Address?       @relation(fields: [addressId], references: [id])
  addressId  String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Address {
  id       String  @id @default(cuid())
  village  String?
  town     String?
  district String
  state    String
  pin      Int

  Person Person[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FamilyMember {
  id         String  @id @default(cuid())
  relation   String
  name       String
  age        Int
  occupation String
  Person     Person? @relation(fields: [personId], references: [id])
  personId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Checking {
  id                  String   @id @default(cuid())
  checkingId          String   @unique
  checkingOfficerName String
  policeStation       String
  captureCount        Int?
  captured            Person[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
